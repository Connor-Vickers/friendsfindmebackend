<h1>Listing Users</h1>
 
<table>
  <tr>
    <th>number</th>
    <th>long</th>
    <th>lat</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.number %></td>
      <td><%= user.long %></td>
      <td><%= user.lat %></td>
    </tr>
  <% end %>
</table>

<form action="/api" method="get">
  number:
  <input type="text" name="number">
  long:
  <input type="text" name="long">
  lat:
  <input type="text" name="lat">
  <input type="submit" value="Submit">
</form>